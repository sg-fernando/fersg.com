---
const { platform, username } = Astro.props
// if email, link to mailto:username
const href = platform === "email" ? `mailto:${username}` : `https://www.${platform}.com/${username}`
---
<a href={href} target="_blank" rel="noopener noreferrer">{platform}</a>

<style>
  a {
    /* padding: 0.5rem 1rem; */
    /* color: white; */
    /* background-color: #4c1d95; */
    text-decoration: none;
    font-weight: 100;
    display: inline-block;

    opacity: 0;
    transform: translateY(-30px);
    animation: slideDownFadeIn 0.6s cubic-bezier(0.47, 0, 0.745, 0.715) forwards;
}

a:nth-child(1) { animation-delay: 0s; }
a:nth-child(2) { animation-delay: 0.1s; }
a:nth-child(3) { animation-delay: 0.2s; }

</style>